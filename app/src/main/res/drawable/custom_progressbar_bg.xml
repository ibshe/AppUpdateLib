<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <gradient android:startColor="#ffffff" android:endColor="#f9f9f9"
                android:angle="270.0" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <gradient android:startColor="#fab894" android:endColor="#f7790a"
                    android:centerColor="#f9893a" android:angle="270.0" />
            </shape>
        </clip>
    </item>

</layer-list>